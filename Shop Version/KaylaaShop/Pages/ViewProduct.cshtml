@page
@model KaylaaShop.Pages.Kaylaa.ViewProductModel

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Product View";
    Layout = "~/Pages/Shared/_LayoutMain.cshtml";
}


<div class="row">
    <div class="col-xl-12">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__head kt-portlet__head--lg">

                <div class="kt-portlet__head-label">
                    <span class="kt-portlet__head-icon">
                        <i class="flaticon-calendar"></i>
                    </span>
                    <h2 class="kt-portlet__head-title kt-font-primary">
                        @Model.productVM.Name
                    </h2>
                </div>

                <div class="kt-portlet__head-toolbar">
                    <div class="kt-portlet__head-actions">

                        <a id="btnView" href="#" class="btn btn-warning btn-pill btn-sm">
                            <strong> Code -  @Model.productVM.prodCode</strong>
                        </a>
                    </div>
                </div>

            </div>

            <div class="kt-portlet__body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 mb-4">
                        <div class="h-100">

                            <div class="row">
                                <div class="col-lg-8 col-md-8">
                                    <a href="#"><img class="card-img-top" src="@Model.productVM.productImageUrl" alt=""></a>
                                </div>

                                <div class="col-lg-4 col-md-3">

                                    <input id="serverUrl" type="hidden" value="@Configuration.GetSection("ServerRoot")["HostUrl"]" />

                                    <p class="card-text">  Item Name <span class="content"> @Model.productVM.Name </span></p>
                                    <p class="card-text">  Size <span class="content"> @Model.productVM.prodSize </span></p>
                                    <p class="card-text">  Code <span class="content"> @Model.productVM.prodCode </span></p>


                                    <p> Normal Selling Price <span class="content"> ₦ @string.Format("{0:N0}", @Model.productVM.NormalSellingPrice)</span></p>
                                    <p> Discounted Selling Price <span class="content"> ₦ @string.Format("{0:N0}", @Model.productVM.discountSellingPrice)</span></p>

                                    <p class="card-text">  Sales Discount Allowed <span class="content"> @(Model.productVM.salesDiscount * 100) % </span></p>

                                    <p class="card-text">  Quantity Available <span class="content"> @Model.productVM.quantityAvailable </span></p>



                                    <p class="card-text">  Category <span class="content"> @Model.productVM.CategoryName </span></p>
                                    <p class="card-text">  Color <span class="content"> @Model.productVM.ColorName </span></p>
                                    <p class="card-text">  Country <span class="content"> @Model.productVM.CountryName </span></p>
                                    <p class="card-text">  Brand <span class="content"> @Model.productVM.BrandName </span></p>

                                    <p class="card-text"> Shop No <span class="content"> @Model.productVM.ShopId </span></p>

                                    <p class="card-text"> Availability  <span class="content"> @Model.productVM.Status </span></p>
                                    <p class="card-text"> Last Stock Date <span class="content"> @Model.productVM.laststockDate </span></p>
                                    <div class="mt-4 float-right">

                                        <a asp-page="./Sales" class="btn btn-primary">Go back to Shop  </a>
                                    </div>
                                </div>
                            </div>




                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
